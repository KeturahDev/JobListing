@{ Layout = "Layout"; }
@using JobBoard.Models;

<h1>Current Job Openings</h1>
@if (Model.Count == 0)
{
  <p>There are no jobs available at this time.</p>
}

  @foreach (Job job in Model)
  {
    <h3>@job.Title</h3>
    <p>@job.Description</p>
    <p>@job.Id</p>

    <a href="/jobs/@job.Id"><p>See Info</p></a>
  }
  
