@{ Layout = "Layout"; }
@using JobBoard.Models;

<h1>Current Job Openings</h1>
@if (Model.Count == 0)
{
  <p>There are no jobs available at this time.</p>
}

  @foreach (Job job in Model)
  {
    <p>@job.Title</p>
    <p>@job.Description</p>
    <h3>Contact Info</h3>
    <p>@job.ContactInfo.Name</p>
    <p>@job.ContactInfo.PhoneNumber</p>
    <p>@job.ContactInfo.Email</p>
  }
  
